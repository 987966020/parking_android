<?xml version="1.0" encoding="utf-8"?>
<hbie.vip.parking.button.WaveView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editoril_material_gender"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:layout_gravity="center_vertical"
    android:background="@color/title_color" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/tv_wait_car_number_payfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_size_15"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="京B38294" />
            <TextView
                android:id="@+id/tv_car_wait_location_payfor"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tv_wait_car_number_payfor"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_size_15"
                android:layout_marginTop="10dp"
                android:text="北京市万达停车场"/>
            <TextView
                android:id="@+id/tv_car_all_pay_payfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/activity_size_20"
                android:layout_marginRight="10dp"
                android:textColor="@color/item_pay_text_color"
                android:text="¥30.00"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_car_wait_time_payfor"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:textSize="@dimen/activity_size_15"
                    android:layout_marginLeft="10dp"
                    android:text="周一 03/12 14:35-16:17"/>

                <TextView
                    android:id="@+id/tv_car_wait_spent_payfor"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="10dp"
                    android:text="停车2小时,每小时3元"/>
            </LinearLayout>
            <TextView
                android:id="@+id/btn_order_pay_payfor"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@color/green"
                android:text="已支付"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                />
        </RelativeLayout>
    </LinearLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/view_color" />
</hbie.vip.parking.button.WaveView>
