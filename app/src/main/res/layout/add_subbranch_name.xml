<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_subbranch_name"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_gravity="center_vertical"
    android:background="@color/title_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view_color"
        />
    <TextView
        android:id="@+id/tv_subbranch_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_add_subbranch_name_text"
        android:layout_marginLeft="15dip"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        />
    <EditText
        android:id="@+id/et_subbranch_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/et_add_subbranch_name_text"
        android:layout_toRightOf="@id/tv_subbranch_name_text"
        android:layout_marginLeft="10dip"
        android:background="@null"
        android:textSize="14sp"
        />
</RelativeLayout>
